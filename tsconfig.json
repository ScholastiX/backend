{
  "ts-node": {
    "files": true,
    "swc": true
  },
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom",
      "es2020.bigint"
    ],
    "outDir": "./build",
    "strict": true,
    "importsNotUsedAsValues": "error",
    "incremental": true,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src"
  ]
}
